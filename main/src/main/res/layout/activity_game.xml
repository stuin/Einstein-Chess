<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.stuin.einstein_chess.Game" android:id="@+id/Relative">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:id="@+id/ChessBoard" android:columnCount="8"
            android:rowCount="8">
    </GridLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Turn"
            android:text="Einstein Chess"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_above="@+id/ChessBoard" android:layout_centerHorizontal="true" android:textSize="25sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:id="@+id/Normal"
            android:layout_above="@+id/Turn" android:layout_alignLeft="@+id/Einstein"
            android:layout_marginBottom="101dp" android:onClick="makeBoard"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einstein"
            android:id="@+id/Einstein" android:layout_below="@+id/ChessBoard" android:layout_centerHorizontal="true"
            android:layout_marginTop="101dp" android:onClick="makeBoard"/>
</RelativeLayout>
